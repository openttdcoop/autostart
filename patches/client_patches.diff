+/* $Id */
+
+/** @file timelapse.cpp Timelapse patch */
+
+#include "stdafx.h"
+#include "openttd.h"
+#include "functions.h"
+#include "core/bitmath_func.hpp"
+#include "settings_type.h"
+#include "date_type.h"
+#include "screenshot.h"
